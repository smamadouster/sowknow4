FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    curl \
    procps \
    && rm -rf /var/lib/apt/lists/*

RUN groupadd -r appuser && useradd -r -g appuser -u 1001 appuser

COPY requirements-telegram.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-telegram.txt

COPY . .

RUN chown -R appuser:appuser /app

ENV PYTHONPATH=/app

# Configure DNS fallback (8.8.8.8 for environments without proper DNS)
RUN echo "nameserver 8.8.8.8" >> /etc/resolv.conf || true

USER appuser

CMD ["python", "-m", "telegram_bot.bot"]
